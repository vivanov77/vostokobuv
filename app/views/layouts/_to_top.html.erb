<script type="text/javascript">
 
$(function() {
 
$(window).scroll(function() {
 
if($(this).scrollTop() != 0) {
 
$('#toTop').fadeIn();
 
} else {
 
$('#toTop').fadeOut();
 
}
 
});
 
$('#toTop').click(function() {
 
$('body,html').animate({scrollTop:0},800);
 
});
 
});
 
</script>


<a class="sp-totop" id="toTop" title="Вверх" rel="nofollow" style="display: block; visibility: visible;">
<!-- <small>Go to top </small> -->
	<i class="fa fa-chevron-up"></i>
</a>