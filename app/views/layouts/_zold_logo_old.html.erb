<div class="logo-container col-centered" id="top_navbar">

  <div class="logo-image">
    <%= image_tag("logo4.png", height: '100') %>    
  </div>

  <div class="logo-account">
    <% if user_signed_in? %>         
      <div class="logo-title">
      <a href="#" class="logo-hello">Привет, <%= current_user.email %></a> 
      <%= link_to 'Профиль', edit_user_path(current_user), class: "logo-iconed" %> / <%= link_to 'Выйти', destroy_user_session_path, :method => :delete %>        
      </div>
    <% else %>
      <span class="logo-title"><%= link_to 'Регистрация', new_user_registration_path, class: "logo-iconed" %> / <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Вход <span class="caret caret-big"></span></a>
  <!-- http://stackoverflow.com/questions/14404923/how-is-the-caret-on-twitter-bootstrap-constructed     -->
        <ul class="dropdown-menu dropdown-menu-right">
          <li><%= link_to 'Войти', new_user_session_path %></li>

          <li role="separator" class="divider"></li>
          <li><%= link_to 'Войти через Facebook', user_facebook_omniauth_authorize_path %></li>
          <li><%= link_to 'Войти через Vkontakte', user_vkontakte_omniauth_authorize_path %></li>
  <!-- http://stackoverflow.com/questions/13539821/twitter-bootstrap-navigation-dividers-not-working-properly-for-google-chrome         -->
          <li role="separator" class="divider"></li>
          <li><%= link_to 'Админка', admin_shoes_path %></li>     

          <!--          <li><%#= link_to 'Sign in with Odnoklassniki', user_odnoklassniki_omniauth_authorize_path %></li>  -->   
        </ul>
      </span>    
    <% end %>
  </div>


  <div class="logo_menu">
    <div class="row col-centered header">

      <div class="valign-center-parent logo-text">
        <div class="text-align-center"><%= link_to 'Обувь от производителя', store_shoes_path %></div>
      </div>
      <div class="valign-center-parent">
        <div class="logo-center"></div>
      </div>      
      <div class="valign-center-parent">
        <%= image_tag("logo_nav_small.jpg", height: '80px') %>
      </div>
      <div class="valign-center-parent">
        <div class="logo-center"></div>
      </div>      
      <div class="valign-center-parent logo-text">
        <div class="text-align-center"><%= link_to 'Комплектующие для обуви', store_components_path %></div>
      </div>

    </div>
  </div>

</div>

<hr class="logo-hr">
