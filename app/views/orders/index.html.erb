<h1 class="page-header">Заказы</h1>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Содержимое</th>
      <th>Пользователь</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.content %></td>
        <% if order.users.size > 0 %>
          <td><%= order.users.first %></td>
        <% else %>
          <td>nil</td>
        <% end %>
        <td><%= link_to 'Показать', order %></td>
        <td><%= link_to 'Редактировать', edit_order_path(order) %></td>
        <td><%= link_to 'Удалить', order, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Новый заказ', new_order_path %>
