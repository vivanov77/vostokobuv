<h1 class="page-header">Товары</h1>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Название</th> 
      <th>Раздел:</th>
      <th>Подраздел:</th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @components.each do |component| %>
      <tr>
        <td><%= component.title %></td>  
        <td><%= component.component_types.size > 0 ? component.component_types.first.title : "Не заполнено" %></td>
        <td><%= component.component_subtypes.size > 0 ? component.component_subtypes.first.title : "Не заполнено" %></td>        
        <td><%= link_to 'Показать', [:admin, component] %></td>
        <td><%= link_to 'Редактировать', edit_admin_component_path(component) %></td>
        <td><%= link_to 'Удалить', [:admin, component], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Новый товар', new_admin_component_path %>
