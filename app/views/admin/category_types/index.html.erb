<h1 class="page-header">Подразделы</h1>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Название</th>     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category_types.each do |category_type| %>
      <tr>
        <td><%= category_type.title %></td>
        <td><%= link_to 'Показать', [:admin, category_type] %></td>
        <td><%= link_to 'Редактировать', edit_admin_category_type_path(category_type) %></td>
        <td><%= link_to 'Удалить', [:admin, category_type], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Новый подраздел', new_admin_category_type_path %>
