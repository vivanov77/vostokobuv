<h1 class="page-header">Пользователи</h1>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
	  <th>id</th>
    <th>Электронная почта</th>
	  <th>Админ</th>	  
	  <th>Подтверждён</th>
    <th>Заблокирован</th>
	  <th>Провайдер</th>
	  <th>Uid</th>
	  <th>Производитель</th>
    <th></th>
    <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
	    <td><%= user.id %></td>
	    <td><%= user.email %></td>
		  <td><%= user.admin %></td>
      <td><%= user.confirmed? %></td>
		  <td><%= user.blocked %></td>
      <td><%= user.provider %></td>
      <td><%= user.uid %></td>
      <td><%= user.producer %></td>      
      <td><%= link_to 'Показать', [:admin, user] %></td>
      <td><%= link_to 'Редактировать', edit_admin_user_path(user) %></td>
      <td><%= link_to 'Удалить', [:admin, user], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

