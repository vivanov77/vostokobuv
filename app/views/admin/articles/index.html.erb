<h1 class="page-header">Статьи</h1>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to 'Показать', [:admin, article] %></td>
        <% if article.try(:users) && article.users.size > 0 %>
           <td><%= link_to 'Показать родителя', article.users.first %></td>
        <% end %>
        <td><%= link_to 'Редактировать', edit_admin_article_path(article) %></td>
        <td><%= link_to 'Удалить', [:admin, article], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Новая статья', new_admin_article_path %>
