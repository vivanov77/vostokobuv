<h1 class="page-header">Настройки</h1>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Имя</th>   
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @configurables.each do |configurable| %>
      <tr>
        <% if configurable.try(:name) %>
          <td><%= Configurable.defaults[configurable.name][:name]%></td>
          <td></td>   
          <td><%= link_to 'Показать', [:admin, configurable] %></td>
          <td><%= link_to 'Редактировать', edit_admin_configurable_path(configurable) %></td>
          <td><%= link_to 'Удалить', [:admin, configurable], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        <% else %>
          <td><%= Configurable.defaults[configurable][:name] %></td>     
          <td><%= link_to 'Создать', new_admin_configurable_path(name: configurable) %></td>
          <td colspan="3"></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>