<h1 class="page-header">Подразделы: Комплектующие</h1>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Название</th>
      <th>Номер (для сортировки)</th>
      <th>Показывать в фильтре</th>
      <th>Раздел</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @component_category_types.each do |component_category_type| %>
      <tr>
        <td><%= component_category_type.title %></td>
        <td><%= component_category_type.number %></td>
        <td><%= component_category_type.public %></td>
        <td><%= component_category_type.component_type.blank? ? "nil" : component_category_type.component_type.title %></td>     
        <td><%= link_to 'Показать', [:admin, component_category_type] %></td>
        <td><%= link_to 'Редактировать', edit_admin_component_category_type_path(component_category_type) %></td>
        <td><%= link_to 'Удалить', [:admin, component_category_type], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Новый Подраздел: Комплектующие', new_admin_component_category_type_path %>
