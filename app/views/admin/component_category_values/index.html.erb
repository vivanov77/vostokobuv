<h1 class="page-header">Компоненты: Комплектующие</h1>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Название</th>
      <th>Подраздел: Комплектующие</th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @component_category_values.each do |component_category_value| %>
      <tr>
        <td><%= component_category_value.title %></td>
        <td><%= component_category_value.component_category_type.blank? ? "nil" : component_category_value.component_category_type.title %></td>        
        <td><%= link_to 'Показать', [:admin, component_category_value] %></td>
        <td><%= link_to 'Редактировать', edit_admin_component_category_value_path(component_category_value) %></td>
        <td><%= link_to 'Удалить', [:admin, component_category_value], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Новый Компонент: Комплектующие', new_admin_component_category_value_path %>
