<h1 class="page-header">Мнения</h1>

<div class="table-responsive">
<table class="table table-striped">  <thead>
    <tr>
      <th>Содержимое</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opinions.each do |opinion| %>
      <tr>
        <td><%= opinion.optext %></td>
        <td><%= link_to 'Показать', opinion %></td>
        <td><%= link_to 'Редактировать', edit_opinion_path(opinion) %></td>
        <td><%= link_to 'Удалить', opinion, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Новое мнение', new_opinion_path %>
